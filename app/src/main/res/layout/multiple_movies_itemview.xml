<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <View
        android:layout_marginVertical="2dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="24dp"
        android:background="#4D808080" />


    <LinearLayout
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="left|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/m_item_cover"
            android:layout_marginRight="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_no_cover" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/m_item_title"
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:gravity="left"
                android:text="@string/movie_name"
                android:textSize="18sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/m_item_language"
                style="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/movie_info" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/m_item_resolution"
                style="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/movie_info" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="24dp"
            android:background="#4D808080" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="24dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <CheckBox
                android:id="@+id/m_bookmark_check"
                android:button="@null"
                android:checked="false"
                android:background="@drawable/ic_bookmark_selector"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <View
                android:layout_marginVertical="5dp"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/m_info_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info" />


        </LinearLayout>


    </LinearLayout>



</LinearLayout>